<plugin name='spring-mobile' version='0.5.1' grailsVersion='2.0 &gt; *'>
  <title>Spring Mobile Grails plugin</title>
  <description>Device resolver based on the Spring Mobile Library</description>
  <documentation>http://grails.org/plugin/spring-mobile</documentation>
  <type>SpringMobileGrailsPlugin</type>
  <resources />
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='org.springframework.mobile' name='spring-mobile-device' version='1.1.0.RELEASE' />
    </compile>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>