<plugin name='greenmail' version='1.3.4' grailsVersion='1.3.0 &gt; *'>
  <author>Grails Plugin Collective</author>
  <authorEmail>grails-plugin-collective@gmail.com</authorEmail>
  <title>Greenmail Plugin for Grails</title>
  <description>Provides a wrapper around GreenMail (http://www.icegreen.com/greenmail/) and provides a view that displays 'sent' messages</description>
  <documentation>http://grails.org/plugin/greenmail</documentation>
  <type>GreenmailGrailsPlugin</type>
  <resources>
    <resource>com.piragua.greenmail.GreenmailController</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='http://download.java.net/maven/2/' url='http://download.java.net/maven/2/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='com.icegreen' name='greenmail' version='1.3' />
    </compile>
    <runtime>
      <dependency group='javax.mail' name='mail' version='1.4.1' />
    </runtime>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>